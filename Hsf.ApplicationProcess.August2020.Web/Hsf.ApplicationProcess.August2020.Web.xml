        <member name="M:Hsf.ApplicationProcess.August2020.Web.Controllers.ApplicantsController.PostApplicant(Hsf.ApplicationProcess.August2020.Domain.Models.Applicant)">
             <summary>
             Posts a new Applicant.
             </summary>
             <remarks>
             Sample request:
            
                 POST /Applicant
                 {
                    "name": "Kacper",
                    "familyname": "Łukowiak",
                    "address": "Kolejowa 57/9 Poznań",
                    "countryoforigin": "Poland",
                    "emailaddress": "kacperlukowiak@gmail.com",
                    "age": 24,
                    "hired": false
                 }
            
             </remarks>
             <param name="applicant"></param>
             <returns>An Applicant.</returns>
             <response code="201">Returns the newly created Applicant</response>
             <response code="400">If the item is null</response> 
        </member>
